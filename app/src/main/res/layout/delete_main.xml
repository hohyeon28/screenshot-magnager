<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20sp"
    android:gravity="center">


    <Button
        android:id="@+id/button_delete_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_automatic_deletion"
        android:layout_marginBottom="23dp"
        android:text="정리하기"
        android:textSize="20dp"
        android:onClick="scheduleJob"/>


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_automatic_deletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 삭제"
        android:textSize="20sp"
        android:paddingRight="25dp"/>


    <Switch
        android:id="@+id/switch_automatic_deletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_automatic_deletion" />


    <TextView
        android:id="@+id/text_peroid_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_automatic_deletion"
        android:layout_marginTop="-2dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:text="주기 설정:"
        android:textSize="20sp"
        android:enabled="false" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:layout_below="@id/text_peroid_settings"
        android:enabled="false"
        />

    <TextView
        android:id="@+id/text_deletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_peroid_settings"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@id/spinner"
        android:text="일 마다 삭제"
        android:textSize="20sp"
        android:enabled="false"/>


</RelativeLayout>